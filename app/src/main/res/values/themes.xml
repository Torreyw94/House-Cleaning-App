<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MargaritaHouseCleaning" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.AppCompat.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/white</item>
    </style>

    <!--Change Address Button Color-->
    <style name="ChangeAddreesBtn" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/Darker_Gray</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/redStatusBarColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/redStatusBarColor</item>
        <item name="colorPrimaryVariant">@color/redStatusBarColor</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <!-- Button Color -->
    <style name="BackButtonColor" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/gray</item>
    </style>



    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/purple_200</item>
        <item name="android:textColorSecondary">@color/purple_200</item>
        <item name="android:textColor">@color/_bg__register_ek2_color</item>
    </style>`

    <style name="Theme.MargaritaHouseCleaning.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MargaritaHouseCleaning.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MargaritaHouseCleaning.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="notificationSwitch" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlActivated">@color/notification</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
    </style>

    <!-- Progress bar color -->
    <style name="AppTheme.RedAccent">
        <item name="colorAccent">@color/redStatusBarColor</item>
    </style>


</resources>














