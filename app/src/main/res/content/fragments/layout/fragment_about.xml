<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Dark_Grey">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:background="@color/Dark_Grey"
        android:theme="@style/Theme.MargaritaHouseCleaning.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_about"
            android:layout_width="match_parent"
            app:theme="@style/ToolbarTheme"
            app:title="About us"
            app:navigationIcon="@drawable/ic_arrow_back"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.MargaritaHouseCleaning.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="171dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/margaritahousecleaning"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="69dp">


                </ImageView>

            </RelativeLayout>

            <LinearLayout
            android:id="@+id/textAboutLinear1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textAbout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingExtra="3sp"
                android:text="Margarita's House Cleaning Services offers house cleaning services for any size home or commercial property. We have been in business for over 20 years servicing the South Bay Area to the Central Valley."
                android:textColor="#D9FFFFFF"
                android:textStyle="bold"
                android:textSize="16dp" />

        </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_clean">

                </ImageView>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/textAboutLinear2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textAbout2"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="Margarita's House Cleaning is a certified green company, mixing our own cleaning chemicals that are customized to each home they detail. We also are environmentally responsible, recycling all waste that is removed from your home. This includes any waste that we create during the cleaning process."
                    android:textColor="#D9FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16dp" />
            </LinearLayout>



            <RelativeLayout
                android:layout_marginStart="25dp"
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_business">

                </ImageView>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/textAboutLinear3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textAbout3"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="We provide our clients that peace of mind knowing that they, as well as the environment, is protected. Schedule an appointment to get a FREE estimate."
                    android:textColor="#D9FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16dp" />

            </LinearLayout>

            <View
                android:id="@+id/divider8"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="45dp"
                android:layout_weight="1"
                android:background="@drawable/line_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>