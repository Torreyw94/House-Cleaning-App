            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/UserAppointmentLocation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/userAddressInfo"
                    android:layout_width="153dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:scaleType="centerCrop"
                    android:textColor="@color/white"
                    android:textColorHint="#80FFFFFF"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/userAddress1"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/underlineAddress"
                    android:layout_width="192dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="88dp"
                    android:background="#737373"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.777"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userAddressInfo"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/userAddress1"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Address:"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/userZipCode1"
                    android:layout_width="73dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:text="Zip Code: "
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userAddress1"
                    app:layout_constraintVertical_bias="0.737" />

                <TextView
                    android:id="@+id/userZipCodeInfo1"
                    android:layout_width="81dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="84dp"
                    android:layout_marginTop="33dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:scaleType="centerCrop"
                    android:textColor="@color/white"
                    android:textColorHint="#80FFFFFF"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/userZipCode1"
                    app:layout_constraintTop_toBottomOf="@+id/userAddressInfo" />

                <View
                    android:id="@+id/underlineZipCode"
                    android:layout_width="192dp"
                    android:layout_height="2dp"
                    android:layout_marginBottom="28dp"
                    android:background="#737373"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.777"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userZipCodeInfo1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/UserAppointmentLocation"
            android:layout_width="245dp"
            android:layout_height="23dp"
            android:layout_marginTop="20dp"
            android:text="Your appointment location:"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/date" />

        <Button
            android:id="@+id/bookBtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:padding="10dp"
            android:text="Book"
            android:theme="@style/AppBottomSheetDialogTheme"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline13" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="642dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="730dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="26dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="380dp" />

        <TextView
            android:id="@+id/tvRFA"
            android:layout_width="193dp"
            android:layout_height="26dp"
            android:layout_marginTop="18dp"
            android:text="Reason for appointment:"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/backgroundView2" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcorner2"
            app:itemTextColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline9"
            app:layout_constraintVertical_bias="1.0"
            app:menu="@menu/nav_menu">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="846dp" />
        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <ImageView
            android:id="@+id/questionMark"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/UserAppointmentLocation"
            app:layout_constraintEnd_toEndOf="@+id/UserAppointmentLocation"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/UserAppointmentLocation"
            app:srcCompat="@drawable/ic_vector" />


        <View
            android:id="@+id/backgroundRFA"
            android:layout_width="355dp"
            android:layout_height="180dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_calendar"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/guideline13"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/tvRFA" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="160dp"
            android:layout_height="41dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:text="Office Cleaning"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/backgroundRFA"
            app:layout_constraintStart_toStartOf="@+id/checkBox4"
            app:layout_constraintTop_toTopOf="@+id/backgroundRFA" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:text="Bathroom Cleaning"
            android:textColor="@color/white"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="190dp"
            android:gravity="center"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:text="Residential Cleaning"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toTopOf="@+id/backgroundRFA" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="38dp" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="152dp"
            android:layout_height="47dp"
            android:paddingLeft="11dp"
            android:visibility="invisible"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="62dp"
            android:gravity="center"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:text="Carpet Cleaning"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundRFA"
            app:layout_constraintEnd_toEndOf="@+id/backgroundRFA"
            app:layout_constraintStart_toEndOf="@+id/checkBox3"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2"
            app:layout_constraintVertical_bias="1.0" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:visibility="invisible"
            android:layout_width="158dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:text="Other: "
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>


