<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dark_Grey"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RegisteredUserActivity">


    <TextView
        android:id="@+id/LoginText"
        android:layout_width="44dp"
        android:layout_height="20dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="24dp"
        android:text="Login"
        android:textColor="#B80E16"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/NoAccount"
        android:layout_width="187dp"
        android:layout_height="24dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="24dp"
        android:text="Already have an account?"
        android:textColor="#BFFFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <TextView
        android:id="@+id/LogInPage"
        android:layout_width="262dp"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="Register an account"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/edit_text_emailRegister"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/backgroundcorners4"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textField"
        app:layout_constraintStart_toStartOf="@+id/textField"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_PhoneNumber" />

    <EditText
        android:id="@+id/edit_text_PhoneNumber"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/backgroundcorners4"
        android:hint="Phone Number"
        android:inputType="phone"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_emailRegister"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_text_emailRegister"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_ZipCode" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        android:layout_width="320dp"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/button_register1"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/button_register1"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_emailRegister"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/edit_text_passwordRegister"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/backgroundcorners4"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"
            app:boxBackgroundMode="none"
            app:layout_constraintEnd_toEndOf="@+id/button_register1"
            app:layout_constraintStart_toStartOf="@+id/button_register1"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_emailRegister"
            app:passwordToggleEnabled="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/edit_text_FullName"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:background="@drawable/backgroundcorners4"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_StreetAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_text_StreetAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />

    <EditText
        android:id="@+id/edit_text_StreetAddress"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/backgroundcorners4"
        android:hint="Street Address"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_ZipCode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_text_ZipCode"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_FullName" />

    <EditText
        android:id="@+id/edit_text_ZipCode"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/backgroundcorners4"
        android:hint="Zip Code"
        android:inputType="text"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_PhoneNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_text_PhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_StreetAddress" />

    <Button
        android:id="@+id/button_register1"
        android:layout_width="287dp"
        android:layout_height="63dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="18dp"
        android:enabled="false"
        android:text="Register"
        android:textSize="16sp"
        android:theme="@style/AppBottomSheetDialogTheme"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textField"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

</androidx.constraintlayout.widget.ConstraintLayout>